@using NetBanking.Core.Application.Dtos.Account
@using NetBanking.Core.Application.ViewModels.Users;
@using NetBanking.Core.Application.Helpers;
@using NetBanking.Core.Application.Enums;
@model SaveUserViewModel

@{
    ViewData["Title"] = "Remove User";
    bool editMode = Model != null && Model.IdCard != null;
    <script src="https://kit.fontawesome.com/7302c44b99.js" crossorigin="anonymous"></script>

}


<div class="col-4 offset-4 mb-3">
    <div class="card box-shadow shadow-sm ">
        <div class="card-body">
            <h4>~What type of product would you like to create for this user?~</h4>
        </div>
    </div>
</div>

<div class="col-4 offset-4">
    <div class="card carduser box-shadow shadow-sm">
        <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
                @if (Model.ImageURL != null)
                {
                    <img src="@Model.ImageURL" alt="Admin" id="profileimage">
                }
                else
                {
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQTnB8SJzsxM_KKbFNf-er2X-WiEdHMHXuz6w&usqp=CAU" alt="Admin" id="profileimage">
                }
                <div class="mt-3">
                    <h4>@Model.UserName</h4>
                    <hr />
                    <p class="text-secondary mb-1">Full Name : @Model.FirstName</p>
                    <p class="text-muted font-size-sm">Last Name : @Model.LastName</p>
                    <p class="text-muted font-size-sm">Identification @Model.IdCard</p>
                    <p class="text-muted font-size-sm">Phone Number : @Model.PhoneNumber</p>
                </div>
            </div>
            <div>
                <a asp-controller="Admin" asp-action="ApproveLoan" asp-route-id="@Model.Id" class="btn btn-outline-success float-end ms-1"><i class="fa-solid fa-money-bill"></i></a>
                <a asp-controller="Admin" asp-action="ProductAddSavingAccount" asp-route-id="@Model.Id" class="btn btn-outline-success float-end ms-1"><i class="fa-solid fa-piggy-bank"></i></a>
                <a asp-controller="Admin" asp-action="AproveCreditCard" asp-route-id="@Model.Id" class="btn btn-outline-info float-end"><i class="fa-solid fa-credit-card"></i></a>
            </div>
        </div> 
    </div>
</div>

<style>

    #profileimage {
        width: 100px;
        object-fit: cover;
        height: 100px;
        border-radius: 50%;
    }

    #card {
        border-radius: 6px;
    }

    .card {
        border-radius: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .carduser:hover {
        transform: translateY(-5px);
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
    }
</style>